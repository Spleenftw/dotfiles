  	font: "Iosevka Nerd Font 10";
    show-icons: true;
    display-drun:	"î§Œ";
    icons-theme: "Dracula";
    drun-display-format: "{name}";
    disable-history: false;
    fullscreen: false;
	  hide-scrollbar: false;
	  sidebar-mode: true;
